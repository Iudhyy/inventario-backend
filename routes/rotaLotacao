        nome:"Walyson",
        dataaquisicao:"27/10/2022"
    },
    
  
]
    
router.get("/",(req,res)=>{
    
    res.send(lotacao);
})
router.get("/:id",(req,res)=>{
    const id=req.params.id; 

    let novoarray=[];
    novoarray=lotacao.filter(linha=>{
        if(linha.id==id){
            return linha;
        }
    })
    res.send(novoarray);
})

router.delete("/",(req,res)=>{
    let novoarray=[];
    const {id} = req.body;
    novoarray=lotacao.filter(linha=>{
        return linha.id!==id
    })
    res.status(200).send(
        novoarray
    )
    
});
router.post("/",(req,res)=>{
   const {id,nome,dataaquisicao}=req.body;

   let i=0;
   let errorMsg=[];
   if(nome.lenght<=3){
    i++;
    errorMsg.push(
        {mensagem:'campo nome menor que 3 caracteres'}
    )
   }
  
  
      
       
   if(i==0){
       lotacao.push (
           {
               id:id,
               nome:nome,
               dataaquisicao:dataaquisicao
           }
       )
       res.status(201).send(
        {mensagem:'cadastro salvo com sucesso'}
    )
   }else{
       res.status(406).send(
           {mensagem:errorMsg}
       )
   }
  
   
  
   
})

module.exports = router;