        nome:"Derick",
       dataaquisicao:"20/10/2022"
    },
    {
        id:2,
        nome:"Iudhy",
        dataaquisicao:"21/10/2022"
    },
    {
        id:3,
        nome:"willian",
        dataaquisicao:"22/10/2022"
    },
    {
        id:4,
        nome:"Bispo",
        dataaquisicao:"23/10/2022"
    },
    {
        id:5,
        nome:"Wesley",
        dataaquisicao:"24/10/2022"
    },
    {
        id:6,
        nome:"Raimundo",
        dataaquisicao:"25/10/2022"
    },
    {
        id:7,
        nome:"Guilherme",
        dataaquisicao:"26/10/2022"
    },
    {
