       contato:"992371957"
    },
    
  
]
    
router.get("/",(req,res)=>{
    
    res.send(empresa);
})
router.get("/:id",(req,res)=>{
    const id=req.params.id; 

    let novoarray=[];
    novoarray=empresa.filter(linha=>{
        if(linha.id==id){
            return linha;
        }
    })
    res.send(novoarray);
})

router.delete("/",(req,res)=>{
    let novoarray=[];
    const {id} = req.body;
    novoarray=empresa.filter(linha=>{
        return linha.id!==id
    })
    res.status(200).send(
        novoarray
    )
    
});
router.post("/",(req,res)=>{
   const {id,nome,responsavel,contato}=req.body;
//    e.preventDefault();

   let i=0;
   let errorMsg=[];
   if(nome.length<3){
    i++;
    errorMsg.push(
        {mensagem:'campo nome tem menos de 3 caracteres'}
    );
    
}
if(responsavel.length<3){
    i++;
    errorMsg.push(
        {mensagem:'campo nome tem menos de 6 caracteres'}
    );
   
}
if(contato.length<9){
    i++;
    errorMsg.push(
        {mensagem:'campo nome tem menos de 9 digitos'});
    
}
  
  
       
   if(i==0){
       empresa.push (
           {
               id:id,
               nome:nome,
               responsavel:responsavel,
               contato:contato
           }
       )
       res.status(201).send(
        {mensagem:'cadastro salvo com sucesso'}
    )
   }else{
       res.status(406).send(
           {mensagem:errorMsg}
       )
   }
  
   
  
   
})


module.exports = router;